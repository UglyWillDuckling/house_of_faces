
    {% macro select(data, name, id, content, table, ident) %} 
        <div class="form-group information">
            <label for="{{ ident }}">{{ name }}: </label>
            <select class="form-control aboutInput" id="{{ ident }}" data-info="{{ data }}"> 

            {% for item in content %}
                <option class="{{ data }}-option" value="{{ item.id }}" 
                {% if id == item.id %}
                  selected="selected"
                {% endif %}>{{ item.name }}</option>
            {% endfor %}   
             </select>
            <button class="btn addContentBtn" data-info="{{ data }}" data-table="{{ table }}">add your 
              {{ name }}</button>
            <button class="btn updateInfoBtn" data-info="{{ data }}">update</button>
       </div>
    {% endmacro %}


    {% macro text(data, name, value, type) %} 
        <div class="information">
          <label for="{{ name }}">{{ name }}: </label>
          <input class="aboutInput" type="{{ type|default('text') }}" id="{{ name }}" value="{{ value }}" data-info={{ data }}> 
          <button class="btn updateInfoBtn" data-info="{{ data }}">update</button>
        </div>   
    {% endmacro %}

